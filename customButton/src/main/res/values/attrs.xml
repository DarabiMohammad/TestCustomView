<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CustomButton">
        
        <attr name="iconSrc" format="reference"/>

        <attr name="iconPosition">
            <flag name="start" value="0x00000000"/>
            <flag name="top" value="0x00000001"/>
            <flag name="end" value="0x00001001"/>
            <flag name="bottom" value="0x00002001"/>
        </attr>

        <attr name="text" format="string"/>

        <attr name="subtext" format="string"/>

        <attr name="rippleEnabled" format="boolean"/>
    </declare-styleable>

</resources>